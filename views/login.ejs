    <h2>Login</h2>
    
           
      <form action="/login" method="POST">
        <label for="email">Email:</label><br>
        <input id="email" type="email" name="email" placeholder="email@example.com" style="width: 300; margin: 1em"><br>
        <label for="password">Password:</label><br>
        <input id="password" type="password" name="password" placeholder="password" style="width: 300; margin: 1em"><br>
        <input type="submit" value="Login" class="btn btn-dark">
      </form>
     
     

</body>
